{
    "name": "yuges-code/laravel-commentable",
    "description": "ğŸ—¯ï¸ Package for easily attaching comments to Laravel eloquent models",
    "keywords": [
        "php",
        "yuges",
        "laravel",
        "package",
        "comment",
        "comments",
        "commentable",
        "laravel-commentable"
    ],
    "homepage": "https://yuges-code.github.io/laravel-commentable",
    "support": {
        "source": "https://github.com/yuges-code/laravel-commentable",
        "issues": "https://github.com/yuges-code/laravel-commentable/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Georgy",
            "email": "goshasafonov@yandex.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "yuges-code/laravel-package": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Yuges\\Commentable\\": "src",
            "Yuges\\Commentable\\Database\\Seeders\\": "database/seeders/",
            "Yuges\\Commentable\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yuges\\Commentable\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Yuges\\Commentable\\Providers\\CommentableServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
